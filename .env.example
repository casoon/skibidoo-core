# Environment variables
# Copy this file to .env and fill in the values

# Mode: api | worker | scheduler
MODE=api
NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
# For docker-compose: postgresql://skibidoo:skibidoo@postgres:5432/skibidoo
DATABASE_URL=postgresql://skibidoo:skibidoo@localhost:5432/skibidoo

# Redis
# For docker-compose: redis://redis:6379
REDIS_URL=redis://localhost:6379

# Auth (generate with: openssl rand -base64 32)
JWT_SECRET=change-this-to-a-secure-random-string-min-32-chars
JWT_REFRESH_SECRET=another-secure-random-string-for-refresh-tokens
JWT_EXPIRY=3600

# Logging
LOG_LEVEL=debug

# Storage (S3-compatible, optional)
# STORAGE_ENDPOINT=https://s3.eu-central-1.amazonaws.com
# STORAGE_BUCKET=skibidoo-uploads
# STORAGE_ACCESS_KEY=
# STORAGE_SECRET_KEY=

# Stripe Payment Integration
# Get your keys from: https://dashboard.stripe.com/apikeys
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# SMTP / Email
# For local development with Mailpit: localhost:1025
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
# SMTP_USER=
# SMTP_PASS=
SMTP_FROM=noreply@skibidoo.de

# Application URLs (for email links)
STOREFRONT_URL=http://localhost:4001
ADMIN_URL=http://localhost:4000

# CORS Origins (comma-separated list of allowed origins)
# Development: http://localhost:4001,http://localhost:4000
# Production: https://skibidoo-store.casoon.dev,https://skibidoo-admin.casoon.dev
CORS_ORIGINS=http://localhost:4001,http://localhost:4000
