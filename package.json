{
  "name": "@skibidoo/core",
  "version": "0.1.0",
  "description": "Skibidoo e-commerce core - API, Worker, Scheduler",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "test:run": "bun test",
    "test:integration": "bun test --config vitest.integration.config.ts",
    "test:all": "bun test && bun test --config vitest.integration.config.ts",
    "test:coverage": "bun test --coverage",
    "lint": "bunx eslint src/",
    "typecheck": "bunx tsc --noEmit",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:studio": "bunx drizzle-kit studio",
    "seed:admin": "bun run src/scripts/seed-admin.ts"
  },
  "keywords": [
    "skibidoo",
    "ecommerce",
    "api",
    "hono",
    "bun"
  ],
  "author": "casoon",
  "license": "LGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/casoon/skibidoo-core.git"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.940.0",
    "@aws-sdk/s3-request-presigner": "^3.940.0",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/trpc-server": "^0.4.0",
    "@hono/zod-openapi": "^1.1.5",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.208.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/instrumentation-http": "^0.208.0",
    "@opentelemetry/instrumentation-ioredis": "^0.56.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-metrics": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@paypal/paypal-server-sdk": "^2.0.0",
    "@t3-oss/env-core": "^0.11.0",
    "@trpc/server": "^11.0.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.0.0",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.6.0",
    "hono-rate-limiter": "^0.4.2",
    "ioredis": "^5.4.0",
    "jimp": "^0.22.12",
    "jose": "^6.1.2",
    "mjml": "^4.17.1",
    "nodemailer": "^7.0.11",
    "pdfkit": "^0.17.2",
    "pino": "^9.0.0",
    "postgres": "^3.4.0",
    "prom-client": "^15.1.3",
    "stripe": "^20.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.9.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/bun": "latest",
    "@types/mjml": "^4.7.4",
    "@types/nodemailer": "^7.0.4",
    "@types/pdfkit": "^0.17.4",
    "drizzle-kit": "^0.28.0",
    "eslint": "^9.0.0",
    "pino-pretty": "^13.1.2",
    "testcontainers": "^11.9.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  }
}
