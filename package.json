{
  "name": "@skibidoo/core",
  "version": "0.1.0",
  "description": "Skibidoo e-commerce core - API, Worker, Scheduler",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:all": "vitest run && vitest run --config vitest.integration.config.ts",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "seed:admin": "tsx src/scripts/seed-admin.ts"
  },
  "keywords": [
    "skibidoo",
    "ecommerce",
    "api",
    "hono"
  ],
  "author": "casoon",
  "license": "LGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/casoon/skibidoo-core.git"
  },
  "engines": {
    "node": ">=24"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.940.0",
    "@aws-sdk/s3-request-presigner": "^3.940.0",
    "@hono/node-server": "^1.13.0",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/trpc-server": "^0.4.0",
    "@hono/zod-openapi": "^1.1.5",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.2",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.208.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-metrics": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@paypal/paypal-server-sdk": "^2.0.0",
    "@t3-oss/env-core": "^0.11.0",
    "@trpc/server": "^11.0.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.0.0",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.6.0",
    "hono-rate-limiter": "^0.4.2",
    "ioredis": "^5.4.0",
    "jose": "^6.1.2",
    "mjml": "^4.17.1",
    "nodemailer": "^7.0.11",
    "pdfkit": "^0.17.2",
    "pino": "^9.0.0",
    "postgres": "^3.4.0",
    "prom-client": "^15.1.3",
    "sharp": "^0.34.5",
    "stripe": "^20.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.9.0",
    "@types/bcrypt": "^6.0.0",
    "@types/mjml": "^4.7.4",
    "@types/node": "^22.0.0",
    "@types/nodemailer": "^7.0.4",
    "@types/pdfkit": "^0.17.4",
    "drizzle-kit": "^0.28.0",
    "eslint": "^9.0.0",
    "pino-pretty": "^13.1.2",
    "testcontainers": "^11.9.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "volta": {
    "node": "24.11.1"
  }
}
